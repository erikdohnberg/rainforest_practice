<h1><%= @product.name %></h1>

<p>
<h3>Description</h3>
<%= @product.description %>
</p>

<h3>Price: </h3><%= @product.price_in_cents %>

<p>
<%= button_to "Edit", edit_product_path(@product), :method => :get %>
<%= button_to "Delete", @product, :confirm => 'Are you sure you want to delete this item?', :method => :delete %>
</p>
<p>
<%= link_to 'Back', products_path %> to products
</p>